

{{#partial "content"}}
  <h1><a href="/">Eventlite</a> </h1><h2> {{event.name}} - Details</h2>

<table class="table table-striped table-hover">
    <tr>
      <td>Id</td>
      <td>{{venue.id}}</td>
    </tr>
    
    <tr>
      <td>Name</td>
      <td>{{venue.name}}</td>
    </tr>
    
    <tr>
      <th>Capacity</th>
      <th>{{venue.capacity}}</th>
    </tr>
    
    <tr>
      <th>Address</th>
      <th>{{venue.address}}</th>
    </tr>
    <tr>
      <th>
         <form action="/venues/{{id}}/delete" method="post"><button type="submit" class="btn btn-danger">Delete</button></form>
       </th>
       <th></th>
    </tr>   
</table>

<h1> Upcoming events </h1>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th><i class="fa fa-bolt"></i> Event</th>
      <th><i class="fa fa-map-marker"></i> Venue</th>
      <th><i class="fa fa-calendar"></i> Date</th>
      <th><i class="fa fa-clock-o"></i> Time</th>
      <th><i class="fa fa-pencil"></i> Update</th>
    </tr>
  </thead>
  <tbody>
    {{#upcoming}}
    <tr>
      <td><a href="/events/{{id}}?name={{name}}">{{name}}</a></td>
      <td><a href="/venues/{{venue.id}}">{{venue.name}}</a></td>
      <td>{{date}}</td>
      <td>{{time}}</td>
      <!---<td>{{id}}</td>-->
      <td><a class="btn btn-primary" role="submit" href="/events/{{id}}/update">Update</a></td>
    </tr>
    {{/upcoming}}
  </tbody>
</table>
 
