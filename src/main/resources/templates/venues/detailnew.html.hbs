{{#partial "content"}}
<head>
<style>
body {
  background: url("https://static.pexels.com/photos/235994/pexels-photo-235994.jpeg") ;

  background-size:1300px 700px;
}
div.background2 {
  background: url("https://blogmedia.evbstatic.com/wp-content/uploads/wpmulti/sites/3/2017/06/19152521/event-feedback.jpg") ;

  background-size:1200px 200px;

}

.navbar {
    display:table;
    li{
        display:table-cell;
    }
}

div.transbox {
  margin: 30px;
  background-color: #ffffff;
  border: 1px solid black;
      background: rgb(204, 204, 204); /* Fallback for older browsers without RGBA-support */
    background: rgba(204, 204, 204, 0.5);
  filter: alpha(opacity=60); /* For IE8 and earlier */
}

.button {
    background-color: white;
    color: black;
    border: 2px solid #555555;
}

.center {
    position: absolute;
    left: 0;
    top: 20%;
    width: 100%;
    text-align: center;
    font-size: 18px;
}

.bottom1 {
    position: absolute;
    left: 3%;
    top:20%;
    width: 100%;
    font-size: 18px;
}
.bottom2 {
    position: fixed;
    left: 59%;
    top: 20%;
    width: 41%;
    text-align: center;
    font-size: 18px;
    float:left;
}
.bottom3 {
    position: absolute;
    left: 2%;
    top: 20%;
    width: 62%;
    font-size: 18px;

}

table {
    border-collapse: collapse;
}

table, td, th {
    border: 1px solid black;
}

div.transbox th,td {
  margin: 500%;
  font-weight: bold;
  color: #000000;
}

.floatLeft { width: 30%; float: left; }
.floatRight {width: 70.1%; float: right; }

nav  {
    border-style: solid;
    padding: 1em;
    overflow: hidden;
}

article {

    border-style: solid;
    padding: 1em;
    overflow: hidden;
}
</style>
</head>
<div class="container">
  <h1><a href="/">Make Simple</a> </h1><h2> {{name}} - Results</h2>
<div class="bottom2">
  <div class="transbox">
<table class="table table-striped table-hover" style="background-color:rgb(204, 204, 204); /* Fallback for older browsers without RGBA-support */
    background: rgba(204, 204, 204, 0.5);">
  <thead>
    <tr>
      <th>Categories</th>
    </tr>
  </thead>
  <tbody>
    {{#subEvents}}
    <tr>
      <td><a href="/venues/{{name}}/{{key}}/">{{name}}</a></td>
    </tr>
    {{/subEvents}}
  </tbody>
</table>
</div>
</div>

{{#Events}}
<div class="bottom3">
  <div class="transbox">
<table class="table table-striped table-hover" style="background-color:rgb(204, 204, 204); /* Fallback for older browsers without RGBA-support */
    background: rgba(204, 204, 204, 0.5);">
  <thead>
    <tr>
      <th> results</th>
      <th> Description</th>
    </tr>
  </thead>
  <tbody>
    {{#Events}}
    <tr>
      <td><a href={{link}}>{{name}}</a></td>
      <td>{{description}}</td>
    </tr>
    {{/Events}}
  </tbody>
</table>
</div>
</div>
{{/Events}}

 </div>

