{{#partial "content"}}
  <h1>Details</h1>

<table class="table table-striped table-hover">
    <tr>
      <th>Id</th>
      <th>{{event.id}}</th>
    </tr>
    
    <tr>
      <th>Name</th>
      <th>{{event.name}}</th>
    </tr>
    
    <tr>
      <th>Date</th>
      <th>{{event.date}}</th>
    </tr>
    
    <tr>
      <th>Venue</th>
      <th>{{event.venue.name}}</th>
    </tr>
    
    <tr>
      <th>Description</th>
      <th>{{event.description}}</th>
    </tr>

</table>
  <a class="btn btn-primary" role="button" href="/events">Back</a>
{{/partial}}

{{> layouts/base title="Detailed Information"}}

