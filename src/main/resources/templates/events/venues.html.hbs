{{#partial "content"}}
  <h1>Details</h1>

<table class="table table-striped table-hover">
    <tr>
      <td>Id</td>
      <td>{{venue.id}}</td>
    </tr>
    
    <tr>
      <td>Name</td>
      <td>{{venue.name}}</td>
    </tr>
    
    <tr>
      <th>Capacity</th>
      <th>{{venue.capacity}}</th>
    </tr>
    
    <tr>
      <th>Address</th>
      <th>{{venue.address}}</th>
    </tr>
</table>

<h1> Upcoming events </h1>
<table class="table table-striped table-hover">
   <thead>
   <tr>
   <th><i class="fa fa-book fa-fw"></i> Event</th>
   <th><i class="fa fa-map-marker"></i> Date</th>
   </tr>
   </thead>
   
   <tbody>
   {{#upcoming}}
   <tr>
   <td>{{name}}</td>
   <td>{{date}}</td>
   </tr>
   {{/upcoming}}
   </tbody>

</table>

<h1> Past events </h1>
<table class="table table-striped table-hover">
   <thead>
   <tr>
   <th><i class="fa fa-book fa-fw"></i> Event</th>
   <th><i class="fa fa-map-marker"></i> Date</th>
   </tr>
   </thead>
   
   <tbody>
   {{#pastEvent}}
   <tr>
   <td>{{name}}</td>
   <td>{{date}}</td>
   </tr>
   {{/pastEvent}}
   </tbody>

</table>

{{/partial}}

{{> layouts/base title="Detailed Information"}}