{{#partial "content"}}
<head>
<style>
body {
  background: url("http://rozdeba.com/wp-content/uploads/2017/11/simplicity.png") ;

  background-size:1300px 700px;
}
div.background2 {
  background: url("https://blogmedia.evbstatic.com/wp-content/uploads/wpmulti/sites/3/2017/06/19152521/event-feedback.jpg") ;

  background-size:1200px 200px;

}


div.transbox {
  margin: 30px;
  background-color: #ffffff;
  border: 1px solid black;
  opacity: 0.6;
  filter: alpha(opacity=60); /* For IE8 and earlier */
}
.center {
    position: absolute;
    left: 0;
    top: 20%;
    width: 100%;
    text-align: center;
    font-size: 18px;
}

.bottom1 {
    position: absolute;
    left: 3%;
    top:45%;
    width: 100%;
    font-size: 18px;
}
.bottom2 {
    position: absolute;
    left: 0;
    top: 50%;
    width: 100%;
    text-align: center;
    font-size: 18px;
}
.bottom3 {
    position: absolute;
    left: 3%;
    top: 180%;
    width: 100%;
    font-size: 18px;
}

div.transbox th,td {
  margin: 500%;
  font-weight: bold;
  color: #000000;
}



nav  {
    border-style: solid;
    padding: 1em;
    overflow: hidden;
}

article {

    border-style: solid;
    padding: 1em;
    overflow: hidden;
}
</style>
</head>

<Body>
<div class="container">


   <h1><a href="/">Make Simple</a> </h1>
<div class="center">
<div class="transbox">
<h2> Text</h2>
  <form action="/events/search" method="get" >
<div class="input-group">
  <input type="text" class="form-control" name="searchEvent" placeholder="Type text here"/>
  <div class="input-group-btn">
  <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
  </div>
  </div>
  </div>
  </div>
</form>



{{#if pastEvents}}
<div class="bottom1">
<h2>Searching Results</h2>
</div>
<div class="bottom2">
  <div class="transbox">
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th><i class="fa fa-bolt"></i> Content</th>

    </tr>
  </thead>
  <tbody>
    {{#pastEvents}}
    <tr>
      <td>{{description}}</td>
    </tr>
    {{/pastEvents}}
  </tbody>
</table>
</div>
</div>
{{/if}}



{{/partial}}

