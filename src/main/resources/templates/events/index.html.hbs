{{#partial "content"}}
<h1>All events</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th><i class="fa fa-bolt"></i> Event</th>
      <th><i class="fa fa-map-marker"></i> Venue</th>
      <th><i class="fa fa-calendar"></i> Date</th>
    </tr>
  </thead>
  <tbody>
    {{#events}}
      <tr>
        <td>{{name}}</td>
        <td>{{venue.name}}</td>
        <td>{{date}}</td>
      </tr>
    {{/events}}
  </tbody>
</table>

<p>
  <a class="btn btn-primary" role="button" href="/events/new">Add a new greeting</a>

</p>
{{/partial}}

{{> layouts/base title="EventLite events"}}
