{{#partial "content"}}
<head>
<style>
body {
  background: url("https://static.pexels.com/photos/235994/pexels-photo-235994.jpeg") ;

  background-size:1300px 700px;
}
div.background2 {
  background: url("https://blogmedia.evbstatic.com/wp-content/uploads/wpmulti/sites/3/2017/06/19152521/event-feedback.jpg") ;

  background-size:1200px 200px;

}


div.transbox {
  margin: 30px;
  background-color: #ffffff;
  border: 1px solid black;
      background: rgb(204, 204, 204); /* Fallback for older browsers without RGBA-support */
    background: rgba(204, 204, 204, 0.5);
  filter: alpha(opacity=60); /* For IE8 and earlier */
}
.center {
    position: absolute;
    left: 0;
    top: 20%;
    width: 100%;
    text-align: center;
    font-size: 18px;
}

.bottom1 {
    position: absolute;
    left: 3%;
    top:45%;
    width: 100%;
    font-size: 18px;
}
.bottom2 {
    position: absolute;
    left: 0;
    top: 50%;
    width: 100%;
    text-align: center;
    font-size: 18px;
}
.bottom3 {
    position: absolute;
    left: 0%;
    top: 230%;
    width: 100%;
    font-size: 18px;
}


div.transbox th,td {
  margin: 500%;
  font-weight: bold;
  color: #000000;
}

line {
 display:inline;
}

nav  {
    border-style: solid;
    padding: 1em;
    overflow: hidden;
}

article {

    border-style: solid;
    padding: 1em;
    overflow: hidden;
}
</style>
</head>

<Body>
<div class="container">


   <h1><a href="/">Make Simple</a> </h1>
<div class="center">
<div class="transbox">
<h2> Link</h2>
  <form action="/events/search" method="get" >
<div class="input-group">
  <input type="text" class="form-control" name="searchEvent" placeholder="Input page link you are trying to understand..."/>
  <div class="input-group-btn">
  <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
  </div>
  </div>
  </div>
  </div>
</form>



{{#if Event}}
<div class="bottom1">
<h2>Searching Results</h2>
</div>
<div class="bottom2">
  <div class="transbox">
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th><i class="fa fa-bolt"></i> Content</th>

    </tr>
  </thead>
  <tbody>
    {{#Event}}
    <tr>
      <td align="left">{{description}}</td>
    </tr>
    {{/Event}}
  </tbody>
</table>
</div>
</div>
{{/if}}

{{#if pastEvents}}

<h2>You may want to know</h2>

  <div class="bottom3">
  <div class="transbox">
<table class="table table-striped table-hover" align="center">
  <thead>
    <tr>
      <th><i class="fa fa-bolt"></i> Keywords</th>
    </tr>
  </thead>
  <tbody>
    {{#pastEvents}}
    <tr>
      <td><a href="/events/{{name}}">{{name}}</a></td>
    </tr>
    {{/pastEvents}}
  </tbody>
</table>
  </div>
  </div>
{{/if}}



{{/partial}}

{{> layouts/base title="Searching url"}}