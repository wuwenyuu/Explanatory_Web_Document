{{#partial "content"}}
<h1>All events</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th><i class="fa fa-bolt"></i> Event</th>
      <th><i class="fa fa-map-marker"></i> Venue</th>
      <th><i class="fa fa-calendar"></i> Date</th>
    </tr>
  </thead>
  <tbody>
    {{#events}}
      <tr>
        <td>{{name}}</td>
        <td>{{venue.name}}</td>
        <td>{{date}}</td>
        <td>
          <form action="/events/{{id}}/delete" method="post">
            <button type="submit" class="btn btn-default btn-xs">Delete</button>
          </form>
        </td>
      </tr>
    {{/events}}
  </tbody>
</table>

{{/partial}}

{{> layouts/base title="EventLite events"}}
