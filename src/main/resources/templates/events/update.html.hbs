{{#partial "content"}}
<h1>{{#events}}{{name}}{{/events}}</h1>




<form method="post">
	<div class="form-group">
		<div class="col-sm-4">
		  <label for="name">Name:</label>
		  <input type="text" class="form-control" id="name" name="name" placeholder="{{events.name}}" value="{{events.name}}">
		</div>
		<div class="col-sm-4">
		  <label for="venue">Venue:</label>
		  <input type="text" class="form-control" id="venueid" name="venueid" placeholder="{{events.venue.id}}" value="{{events.venue.id}}">
		</div>
		<div class="col-sm-4" id="datetimepicker1">
		  <label for="date">Date:</label>
		  <input type="text" class="form-control" id="date" name="date" placeholder="{{events.date}}" value="{{events.date}}" min="2017-03-10">
		  <!---<span class="input-group-addon">
		  	<span class="glyphicon glyphicon-calendar"></span>
		  </span>-->
		</div>
		<div>
			<button class="btn btn-primary" type="submit">Update</button>
		</div>
	</div>
</form>




{{/partial}}

{{> layouts/base title="EventLite update"}}
