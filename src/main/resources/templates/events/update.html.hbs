{{#partial "content"}}
<h1><a href="/">Eventlite</a> </h1><h2>Update {{#events}}{{name}}{{/events}}</h2>


<form method="post">
	<div class="form-group">
		<div class="col-sm-2">
		  <label for="name">Name:</label>
		  <input type="text" class="form-control" id="name" name="name" maxlength="255" placeholder="{{events.name}}" value="{{events.name}}" autofocus required>
		</div>
		<div class="col-sm-2">
		  <label for="venue">Venue:</label>
		  <input type="text" class="form-control" id="venuename" name="venuename" placeholder="{{events.venue.name}}" value="{{events.venue.name}}" autofocus required>
		</div>
		<div class="col-sm-2" id="datetimepicker1">
		  <label for="date">Date:</label>
		  <input type="text" class="form-control" id="date" name="date" placeholder="{{events.date}}" value="{{events.date}}" min="2017-03-10" autofocus required>
		  <!---<span class="input-group-addon">
		  	<span class="glyphicon glyphicon-calendar"></span>
		  </span>-->
		</div>
		
		<div class="col-sm-2">
		  <label for="time">Time:</label>
		  <input type="text" class="form-control" id="time" name="time" placeholder="{{events.time}}" value="{{events.time}}">
		</div>
		
		<div class="col-sm-4">
		  <label for="description">Description:</label>
		  <input type="text" class="form-control" id="description" name="description"  maxlength="499" placeholder="{{events.description}}" value="{{events.description}}">
		</div>
		
		<div>
			<button class="btn btn-primary" type="submit">Update</button>
		</div>
	</div>
</form>




{{/partial}}

{{> layouts/base title="EventLite update"}}
